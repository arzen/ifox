<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arzen.ifox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="14" />

    <!-- START 以下是SDK需要的权限 -->
    <!-- 获取允许是否访问网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取 手机里面一下参数 如：imsi、imse、number -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 获取网络相关信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 发送短信权限 不加会报“失败，请使用wap联网方式，在试一次” -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!--  -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- <uses-permission android:name="android.permission.READ_SMS" /> -->
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_APN_SETTINGS" />
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />

    <!-- END 以上是SDK需要的权限 -->
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <meta-data
            android:name="WIIPAY_APP_ID"
            android:value="3d4173549ce1e19861740b0f6f0528f2" >
        </meta-data>
        <meta-data
            android:name="WIIPAY_CHANNEL_CODE"
            android:value="166880002" >
        </meta-data>

        <activity
            android:name="MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arzen.ifox.CommonActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.action.common.activty" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 银联 -->
        <activity
            android:name="com.unionpay.uppay.PayActivityEx"
            android:configChanges="orientation|keyboardHidden"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.unionpay.uppay.PayActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.UPPay" >
        </activity>

        <!-- START 以下是SDK需要的信息 -->
        <activity
            android:name="com.bx.sdk.UpActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>

        <service android:name="com.bx.pay.WpaySmsService" >
            <intent-filter>
                <action android:name="com.bx.pay.WpaySmsService" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.bx.pay.SmsListener"
            android:label="Sms listener" >
            <intent-filter android:priority="10000" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.arzen.ifox.receiver.IService"
            android:process=".iService" />

        <receiver android:name="com.arzen.ifox.service.IReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <!-- END 以上是SDK需要的信息 -->

    </application>

</manifest>